<Page x:Class="BD4.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BD4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="VolGrid" Grid.RowSpan="3" Grid.ColumnSpan="2" SelectionChanged="VoleybalGrid_SelectionChanged" CanUserAddRows="False"/>
        <TextBox x:Name="num" Grid.Row="0" Grid.Column="2"/>
        <TextBox x:Name="years" Grid.Row="1" Grid.Column="2"/>
        <TextBox x:Name="local" Grid.Row="2" Grid.Column="2"/>
        <Button x:Name="setgroop" Grid.Row="3" Grid.Column="2" Content="Сохранить данные в вторую таблицы" Click="setgroop_Click"/>
        <Button x:Name="delgroop" Grid.Row="3" Grid.Column="0" Content="Удалить данные" Click="delgroop_Click"/>
        <Button x:Name="apgroop" Grid.Row="3" Grid.Column="1" Content="Изменить данные" Click="apgroop_Click"/>
    </Grid>
</Page>
